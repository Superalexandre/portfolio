{
    "name": "remix-fastify",
    "version": "0.0.1",
    "private": true,
    "type": "module",
    "scripts": {
        "build": "remix build",
        "dev": "remix dev --manual -c \"node --no-warnings --loader ts-node/esm --watch-path ./server.ts --enable-source-maps ./server.ts\"",
        "start": "node --enable-source-maps ./server.js",
        "typecheck": "tsc",
        "lint": "eslint --ext .js,.jsx,.ts,.tsx .",
        "depcheck": "depcheck --ignores '~,ts-node,@typescript-eslint/eslint-plugin'",
        "deploy": "npm i && npm run tailwind:css && npm run build && npm run db:migration && tsc --p tsconfigServer.json",
        "tailwind:css": "npx tailwindcss -o ./app/tailwind-minify.css --minify",
        "db:migration": "drizzle-kit generate:sqlite --out ./app/database/migrations --schema ./app/database/schema/secretMessages.ts"
    },
    "dependencies": {
        "@hono/node-server": "^1.8.1",
        "@react-hookz/web": "^24.0.4",
        "@remix-run/css-bundle": "^2.6.0",
        "@remix-run/node": "^2.6.0",
        "@remix-run/react": "^2.6.0",
        "@stylistic/eslint-plugin": "^1.6.1",
        "@types/node": "^20.11.19",
        "@typescript-eslint/eslint-plugin": "^7.0.2",
        "@typescript-eslint/parser": "^7.0.0",
        "better-sqlite3": "^9.4.1",
        "depcheck": "^1.4.7",
        "dotenv": "^16.4.4",
        "drizzle-orm": "^0.29.3",
        "eslint-import-resolver-typescript": "^3.6.1",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-react": "^7.33.2",
        "hono": "^4.0.5",
        "i18next": "^23.8.2",
        "i18next-browser-languagedetector": "^7.2.0",
        "i18next-fs-backend": "^2.3.1",
        "i18next-http-backend": "^2.4.3",
        "isbot": "^5.0.0",
        "react": "^18.2.0",
        "react-confetti": "^6.1.0",
        "react-dom": "^18.2.0",
        "react-i18next": "^14.0.5",
        "react-icons": "^5.0.1",
        "remix": "^2.7.2",
        "remix-i18next": "^5.5.0",
        "ts-node": "^10.9.2",
        "uuid": "^9.0.1"
    },
    "devDependencies": {
        "@remix-run/dev": "^2.6.0",
        "@remix-run/eslint-config": "^2.6.0",
        "@types/better-sqlite3": "^7.6.9",
        "@types/react": "^18.2.55",
        "@types/react-dom": "^18.2.19",
        "@types/uuid": "^9.0.8",
        "drizzle-kit": "^0.20.14",
        "eslint": "^8.56.0",
        "remix-flat-routes": "^0.6.4",
        "remix-hono": "^0.0.15",
        "tailwindcss": "^3.4.1",
        "typescript": "^5.3.3"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}
